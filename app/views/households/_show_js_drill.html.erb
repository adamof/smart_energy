      //       var point = this.point, s = '';
            
      //        switch (this.series.options.level) {
      //           case 0:
      //               s = 'LEVEL ONE<br/>';
      //               s += ' INSTRUCTIONS HERE 111';
      //               break;
                
      //           case 1:
      //               s = 'LEVEL TWO INSTRUCTIONS HERE <br/>';
      //               s += ' INSTRUCTIONS HERE 222';
      //               break;
                
      //           case 2:
      //               s = 'LEVEL THREE INSTRUCTIONS HERE<br/>';
      //               s += 'INSTRUCTIONS HERE 333';
      //               break;
      //        }
             
             
      //       return s;
      //    }
      // },
      series: [{
         name: name,
         level: level,
         data: data,
         color: colors[0]
      }],
      exporting: {
         enabled: false
      }
   });
  })

<% end %>